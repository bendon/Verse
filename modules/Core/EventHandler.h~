#ifndef Core_EventHandler_h
#define Core_EventHandler_h

#include <string>
#include <vector>

#include "Object.h"
#include "Callback.h"
#include <Events/Event.h>

namespace Core {

class EventCallback{
	public:
		Callback *callback;
		std::string type;	
};

class EventHandler : public Object {

 public:
 	static EventHandler* Instance();
    
    std::vector<EventCallback> eventList;
	void dispatchEvent(Events::Event event);
	void registerEvent(std::string eventType, Callback *callback);
 
 protected:
 	EventHandler();
 	EventHandler(const EventHandler &);
 	EventHandler &operator= (const EventHandler &);
 	
 private:
 	static EventHandler* pinstance;
 	
};

} /* End of namespace Core */

#endif // Core_EventHandler_h
