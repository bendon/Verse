#include "Button.h"

namespace UI {

void Button::draw()
{
	glDisable(GL_DEPTH_TEST);
	glDisable(GL_LIGHTING);
	glMatrixMode(GL_PROJECTION);
	glPushMatrix();
	glOrtho(0, 1, 1, 0, -5, 1);
	glMatrixMode(GL_MODELVIEW);
	glLoadIdentity();

	glBegin(GL_QUADS);
	glVertex2f(x, y);
	glVertex2f(x+width,y);
	glVertex2f(x+width, y+height);
	glVertex2f(x, y+height);
	glEnd();
}

} /* End of namespace UI */
